{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"sourceMap": true,
		"inlineSources": true,
		"target": "es5",
		"lib": [
			"es2017",
			"dom"
		],
		"typeRoots": [
			"node_modules/@types"
		]
  },
  "include": [
    "lib/"
	],
	"exclude": [
		"node_modules/"
	]
}
